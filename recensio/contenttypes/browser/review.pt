                </div>
            </div>
        </div>





        <dl>
          <tal:field repeat="field context/metadata_fields">
            <dt tal:content="python:metadata[field]"></dt>
            <dd tal:condition="python: field in view.review_journal_fields.keys()">
              <tal:review_journal_field content="python: context[field]()" /></dd>
            <dd tal:condition="python: not field in view.review_journal_fields.keys()">
              <tal:widget metal:use-macro="python:context.widget(field)" />
            </dd>
          </tal:field>
        </dl>
        <dl tal:define="pdf context/get_review_pdf"
            tal:condition="pdf">
          <dt>Download</dt>
          <dd><a tal:attributes="href python:context.absolute_url()+'/@@generate-pdf-recension'"
                 tal:content="pdf/Title | string:PDF">PDF</a></dd>
        </dl>
      </div>
      <div id="review-citation">
        <p tal:content="structure context/get_citation_string"></p>
        <a tal:attributes="href context/absolute_url"
           tal:content="context/absolute_url"></a>
      </div>
    </div>
  </body>
</html>
