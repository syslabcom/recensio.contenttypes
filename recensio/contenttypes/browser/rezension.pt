<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
  <body>
    <div metal:fill-slot="main">

      <div id="rezension">
        <h2 tal:content="view/get_rezension_title"></h2>
        <p tal:content="context/getRezension"></p>
      </div>
      <div id="rezension-reference">
        <iframe tal:condition="view/has_pdf"
                tal:attributes="src python:'http://docs.google.com/viewer?url=%s/pdf&embedded=true' %context.absolute_url()" 
                style="width:570px; height:740px;" 
                frameborder="0"></iframe>
      </div>
      <div id="rezension-metadata"
           tal:define="metadata view/get_metadata">
        <tal:meta repeat="field python:metadata.keys()">
          <dl>
            <dt tal:content="python:metadata[field]"></dt>
            <dd><tal:widget metal:use-macro="python:context.widget(field)" /></dd>
          </dl>
        </tal:meta>
      </div>

    </div>
  </body>
</html>
